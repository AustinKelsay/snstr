{
  "name": "snstr",
  "version": "0.1.0",
  "description": "Simple Nostr Software Toolkit for Retards",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:examples": "tsc -p examples/tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration.test.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "example": "ts-node examples/nip46/example.ts",
    "example:dm": "ts-node examples/direct-message.ts",
    "example:crypto": "ts-node examples/crypto-demo.ts",
    "example:nip04": "ts-node examples/nip04/direct-message.ts",
    "example:nip44": "ts-node examples/nip44/nip44-demo.ts",
    "example:nip19": "ts-node examples/nip19-demo.ts",
    "example:nip19:verbose": "VERBOSE=true ts-node examples/nip19-demo.ts",
    "example:nip05": "ts-node examples/nip05/nip05-demo.ts",
    "example:nip05:verbose": "VERBOSE=true ts-node examples/nip05/nip05-demo.ts",
    "example:ephemeral": "VERBOSE=true ts-node examples/basic-usage.ts",
    "example:ephemeral:dm": "VERBOSE=true ts-node examples/direct-message.ts",
    "example:public": "VERBOSE=true USE_EPHEMERAL=false ts-node examples/basic-usage.ts",
    "example:public:dm": "VERBOSE=true USE_EPHEMERAL=false ts-node examples/direct-message.ts",
    "example:debug": "DEBUG=true ts-node examples/basic-usage.ts",
    "test:encryption": "jest tests/crypto.test.ts -t 'NIP-04'",
    "test:nip04": "jest tests/nip04/encryption.test.ts",
    "test:nip44": "jest tests/nip44",
    "test:nip19": "jest tests/nip19.test.ts",
    "test:nip05": "jest tests/nip05.test.ts",
    "test:nip46": "jest tests/nip46.test.ts",
    "example:nip46": "ts-node examples/nip46/example.ts",
    "example:nip46:minimal": "ts-node examples/nip46/minimal.ts"
  },
  "keywords": [
    "nostr",
    "typescript",
    "lightweight",
    "nip46",
    "remote-signing",
    "encryption"
  ],
  "author": "plebdev",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "browserify": "^17.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@noble/ciphers": "^0.4.1",
    "@noble/curves": "^1.8.1",
    "@noble/hashes": "^1.3.3",
    "@noble/secp256k1": "^1.7.1",
    "@scure/base": "^1.2.4",
    "nostr-tools": "^1.17.0",
    "websocket-polyfill": "^0.0.3",
    "ws": "^8.15.1",
    "zod": "^3.22.4"
  }
}
