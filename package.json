{
  "name": "snstr",
  "version": "0.1.0",
  "description": "Simple Nostr Software Toolkit for Retards",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "// Build": "-------------- Build Commands --------------",
    "build": "rimraf dist && tsc",
    "build:examples": "tsc -p examples/tsconfig.json",
    
    "// Lint & Format": "-------------- Code Quality --------------",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
     
    "// Core Tests": "-------------- Core Test Commands --------------",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration.test.ts",
    "test:encryption": "jest tests/crypto.test.ts -t 'NIP-04'",
    "test:event": "jest tests/event/event.test.ts",
    "test:event:ordering": "jest tests/event/event-ordering.test.ts",
    "test:event:ordering:integration": "jest tests/event/event-ordering-integration.test.ts",
    "test:nostr": "jest tests/nostr.test.ts",
    "test:relay": "jest tests/relay.test.ts",
    
    "// NIP Tests": "-------------- NIP Test Commands --------------",
    "test:nip04": "jest tests/nip04/encryption.test.ts",
    "test:nip05": "jest tests/nip05.test.ts",
    "test:nip07": "jest tests/nip07.test.ts",
    "test:nip11": "jest tests/nip11.test.ts",
    "test:nip19": "jest tests/nip19",
    "test:nip44": "jest tests/nip44",
    "test:nip46": "jest tests/nip46",
    "test:nip47": "jest tests/nip47",
    "test:nip57": "jest tests/nip57",

    "// Test Groups": "-------------- Test Groups --------------",
    "test:all": "npm test",
    "test:core": "jest tests/event/event.test.ts tests/nostr.test.ts tests/relay.test.ts tests/event/event-ordering.test.ts",
    "test:event:all": "jest tests/event",
    "test:crypto": "jest tests/crypto.test.ts tests/nip04/encryption.test.ts tests/nip44",
    "test:identity": "jest tests/nip05.test.ts tests/nip07.test.ts tests/nip19",
    "test:protocols": "jest tests/nip46 tests/nip47 tests/nip57",
     
    "// Basic Examples": "-------------- Basic Examples --------------",
    "example": "ts-node examples/basic-usage.ts",
    "example:verbose": "VERBOSE=true ts-node examples/basic-usage.ts",
    "example:debug": "DEBUG=true ts-node examples/basic-usage.ts",
    "example:crypto": "ts-node examples/crypto-demo.ts",
    "example:dm": "ts-node examples/direct-message.ts",
    "example:dm:verbose": "VERBOSE=true ts-node examples/direct-message.ts",
    "example:dm:public": "VERBOSE=true USE_EPHEMERAL=false ts-node examples/direct-message.ts",
    "example:relay-connection": "ts-node examples/relay-connection.ts",
    "example:event-ordering": "ts-node examples/event-ordering-demo.ts",
    "example:validation": "npm run example:relay-connection && npm run example && npm run example:dm && npm run example:event-ordering",
     
    "// NIP Examples": "-------------- NIP Examples --------------",
    "example:nip04": "ts-node examples/nip04/direct-message.ts",
    "example:nip05": "ts-node examples/nip05/nip05-demo.ts",
    "example:nip05:verbose": "VERBOSE=true ts-node examples/nip05/nip05-demo.ts",
    "example:nip07": "ts-node examples/nip07/browser.ts",
    "example:nip07:dm": "ts-node examples/nip07/direct-message.ts",
    "example:nip11": "ts-node examples/nip11/relay-info-example.ts",
    "example:nip11:verbose": "VERBOSE=true ts-node examples/nip11/relay-info-example.ts",
    "example:nip19": "ts-node examples/nip19/nip19-demo.ts",
    "example:nip19:verbose": "VERBOSE=true ts-node examples/nip19/nip19-demo.ts",
    "example:nip19:bech32": "ts-node examples/nip19/bech32-example.ts",
    "example:nip19:tlv": "ts-node examples/nip19/tlv-example.ts",
    "example:nip19:validation": "ts-node examples/nip19/validation-example.ts",
    "example:nip19:security": "ts-node examples/nip19/security-example.ts",
    "example:nip19:demo": "ts-node examples/nip19/nip19-demo.ts",
    "example:nip44": "ts-node examples/nip44/nip44-demo.ts",
    "example:nip44:test-vector": "ts-node examples/nip44/nip44-test-vector.ts", 
    "example:nip44:standalone": "ts-node examples/nip44/standalone/nip44-demo.ts",
    "example:nip46": "ts-node examples/nip46/unified-example.ts",
    "example:nip46:minimal": "ts-node examples/nip46/minimal.ts",
    "example:nip46:basic": "ts-node examples/nip46/basic-example.ts",
    "example:nip46:advanced": "ts-node examples/nip46/advanced/remote-signing-demo.ts",
    "example:nip46:from-scratch": "ts-node examples/nip46/from-scratch/implementation-from-scratch.ts",
    "example:nip46:simple": "ts-node examples/nip46/simple/simple-example.ts",
    "example:nip46:simple-client": "ts-node examples/nip46/simple/simple-client-test.ts",
    "example:nip47": "ts-node examples/nip47/basic-example.ts",
    "example:nip47:verbose": "VERBOSE=true ts-node examples/nip47/basic-example.ts",
    "example:nip47:client-service": "ts-node examples/nip47/basic-client-service.ts",
    "example:nip47:error-handling": "ts-node examples/nip47/error-handling-example.ts",
    "example:nip47:expiration": "ts-node examples/nip47/request-expiration-example.ts",
    "example:nip57": "ts-node examples/nip57/basic-example.ts",
    "example:nip57:client": "ts-node examples/nip57/zap-client-example.ts",
    "example:nip57:lnurl": "ts-node examples/nip57/lnurl-server-simulation.ts",
    "example:nip57:validation": "ts-node examples/nip57/invoice-validation-example.ts",
    
    "// Example Groups": "-------------- Example Groups --------------",
    "example:all": "npm run example",
    "example:basic": "npm run example && npm run example:crypto && npm run example:dm",
    "example:messaging": "npm run example:dm && npm run example:nip04 && npm run example:nip44",
    "example:identity": "npm run example:nip05 && npm run example:nip07 && npm run example:nip19",
    "example:payments": "npm run example:nip47 && npm run example:nip57",
    "example:advanced": "npm run example:nip46 && npm run example:nip47:error-handling"
  },
  "keywords": [
    "nostr",
    "nostr-protocol",
    "event",
    "client",
    "relay",
    "typescript",
    "lightweight",
    "nip46",
    "remote-signing",
    "encryption",
    "nip47",
    "wallet-connect",
    "lightning"
  ],
  "author": "plebdev",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "browserify": "^17.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@noble/ciphers": "^0.4.1",
    "@noble/curves": "^1.8.1",
    "@noble/hashes": "^1.3.3",
    "@scure/base": "^1.2.4",
    "light-bolt11-decoder": "^3.2.0",
    "websocket-polyfill": "^0.0.3",
    "ws": "^8.15.1",
    "zod": "^3.22.4"
  }
}
